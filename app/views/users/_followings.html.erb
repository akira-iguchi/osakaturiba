<div class="follow_body">
  <div class="row">
    <% if users.any? %>
      <% users.each do |user| %>
          <div class="col-xl-6 text-center">
            <div class="follow_user">
              <a href="/users/<%= user.id %>"><%= image_tag user.image.url, class:"follow_icon", alt: "" %></a>
              <%= link_to user.name, user_path(user), class: "follow_user_name" %>
            </div>
            <div class="follow_btn">
              <%= render 'relationships/follow_button', user: user %>
            </div>
          </div>
      <% end %>
    <% else %>
      <div class="mx-auto d-block follow_none">
        <p>誰もフォローしていません</p>
      </div>
    <% end %>
  </div>
</div>