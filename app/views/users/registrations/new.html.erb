<div class="container">
  <div class="text-center">
    <p class="logout_title">新規登録</p>
  </div>
  
  <div class="row">
    <div class="user_new_form col-md-10 col-lg-6">
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      
        <div class="center jumbotron">
          
          <div class="form-group">
          <label class="required">名前</label>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
    
          <div class="form-group" required>
            <label class="required">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
    
          <div class="form-group">
            <div><%= f.label :image, '画像' %></div>
            <%= f.file_field :image %>
            <%= f.hidden_field :image_cache %>
          </div>

          <div class="form-group">
            <label for="js-passcheck" class="required">パスワード（６文字以上）</label>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: "js-password" %>
          </div>
          
          <div class="form-group">
            <label for="js-passcheck_confirmation" class="required">パスワード確認</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: "js-password_confirmation" %>
          </div>
          
          <p class="check">
            <label for="js-passcheck">パスワードを表示する</label>
            <input type="checkbox" id="js-passcheck"/>
          </p>
          
          <div>
          <%= f.submit '新規登録', class: 'btn btn-primary' %>
          </div>
         
        </div>
      
      <% end %>
      
  </div>
</div>

<%= javascript_include_tag 'user.js' %>
