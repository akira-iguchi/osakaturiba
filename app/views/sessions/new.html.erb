<div class="container">
  <div class="text-center">
    <p class="logout_title">ログイン</p>
  </div>
  
  <div class="row">
    <div class="login_form col-md-10 col-lg-6">
      
      <%= form_with(url: login_path, model: @login, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="center jumbotron">
      
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
    
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
     
        
        <div>
          <%= f.submit 'ログイン', class: 'btn btn-primary' %>
        </div>
        
        
        <div>
          <%= link_to 'ゲストログインする', guest_path, method: :post, class: 'btn btn-secondary guest' %>
        </div>
        
      </div>
          
          <% end %>
        <p class="new_user"><%= link_to 'アカウントをお持ちでない方はこちらから', signup_path %></p>
    </div>
  </div>
</div>

<%= javascript_include_tag 'session.js' %>