<h4>釣りを予定、記録しよう</h4>

<div class="record_form">
  <% if request.path_info == user_records_path(current_user) %>
    <%= form_with(model: [@user, @record], url: user_records_path(current_user), local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.text_field :spot, placeholder: "釣り場" %>
      </div>

      <div class="form-group">
        <%= f.text_field :fishingtype, placeholder: "釣り方" %>
      </div>

      <div class="form-group">
        <%= f.text_field :bait, placeholder: "エサ" %>
      </div>

      <div class="form-group">
        <%= f.text_field :weather, placeholder: "天気" %>
      </div>

      <div class="form-group">
        <%= f.label :時間 %>
        <%= f.time_field :fishing_start_time %>〜<%= f.time_field :fishing_end_time %>
      </div>

      <div class="form-group">
        <%= f.text_area :detail, class: 'js-text', id: "comment_text", placeholder: "詳細" %>
      <p class="js-text-count pull-right"></p>
      </div>

      <div class="form-group">
        <%= f.date_field :start_time, value: Date.today %>
      </div>
      
      <div class="form-btn">
          <%= button_tag :type => "submit", :class =>"btn btn--red btn--radius btn--cubic" do %>
            記録する&emsp;<i class="fas fa-angle-right"></i>
          <% end %>
      </div>

    <% end %>

  <% else %>

    <%= form_with(model: [@user, @record], url: user_record_path(current_user, @record), local: true) do |f| %>
   <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.text_field :spot, placeholder: "釣り場" %>
      </div>

      <div class="form-group">
        <%= f.text_field :fishingtype, placeholder: "釣り方" %>
      </div>

      <div class="form-group">
        <%= f.text_field :bait, placeholder: "エサ" %>
      </div>

      <div class="form-group">
        <%= f.text_field :weather, placeholder: "天気" %>
      </div>

      <div class="form-group">
        <%= f.label :時間 %>
        <%= f.time_field :fishing_start_time %>〜<%= f.time_field :fishing_end_time %>
      </div>

      <div class="form-group">
        <%= f.text_area :detail, class: 'js-text', id: "comment_text", placeholder: "詳細" %>
      <p class="js-text-count pull-right"></p>
      </div>

      <div class="form-group">
        <%= f.date_field :start_time, value: Date.today %>
      </div>
      
      <div class="form-btn">
        <%= link_to '戻る', :back, class: 'btn-default cancel-round-btn' %>
        <%= button_tag :type => "submit", :class =>"btn btn--red btn--radius btn--cubic" do %>
          編集する&emsp;<i class="fas fa-angle-right"></i>
        <% end %>
      </div>

    <% end %>

  <% end %>
</div>